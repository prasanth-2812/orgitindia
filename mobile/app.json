{
  "expo": {
    "name": "Messaging App",
    "slug": "messaging-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#007AFF",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.messagingapp"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#7C3AED"
      },
      "package": "com.messagingapp",
      "softwareKeyboardLayoutMode": "resize",
      "statusBar": {
        "backgroundColor": "#7C3AED",
        "barStyle": "light-content"
      }
    },
    "web": {}
  }
}

